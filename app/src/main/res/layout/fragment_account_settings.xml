<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    tools:context=".FragmentMain.Profile.AccountSettings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="405dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/collapsingdesign"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="40dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Edit Profile"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                </LinearLayout>

                <androidx.cardview.widget.CardView

                    android:layout_width="280dp"
                    android:layout_height="210dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="140dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_image"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:src="@drawable/user_profile" />

                        <TextView
                            android:id="@+id/fnameprofile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsmedium"
                            android:paddingTop="10dp"
                            android:text="Profile Name"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/statussubscrip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsregular"
                            android:paddingTop="2dp"
                            android:text="Manage Profile"
                            android:textSize="13sp" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="9dp"

                    >


                    <Button
                        android:id="@+id/logoutbtnni"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_premium"
                        android:fontFamily="@font/poppinsregular"
                        android:text="Log Out"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:orientation="vertical"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:fontFamily="@font/ubuntu_regular"
                        android:text="Account Info"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            >
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppinsregular"
                                android:drawableStart="@drawable/fullname_icon"
                                android:drawablePadding="10dp"
                                android:id="@+id/fullnameedit"
                                android:background="@drawable/custom_input"
                                android:hint="Fullname"
                                android:textSize="15sp"
                                android:paddingLeft="20dp"
                                android:ems="10"
                                android:inputType="text"
                                android:layout_alignParentEnd="true"/>

                        </RelativeLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            >
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppinsregular"
                                android:drawableStart="@drawable/profile_icon"
                                android:drawablePadding="10dp"
                                android:id="@+id/usernameedit"
                                android:background="@drawable/custom_input"
                                android:hint="Username"
                                android:textSize="15sp"
                                android:paddingLeft="20dp"
                                android:ems="10"
                                android:inputType="text"
                                android:layout_alignParentEnd="true"/>

                        </RelativeLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            >
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppinsregular"
                                android:drawableStart="@drawable/ic_baseline_settings_phone_24"
                                android:drawablePadding="10dp"
                                android:id="@+id/numberedit"
                                android:background="@drawable/custom_input"
                                android:hint="Phone Number"
                                android:textSize="15sp"
                                android:paddingLeft="20dp"
                                android:ems="10"
                                android:inputType="text"
                                android:layout_alignParentEnd="true"/>

                        </RelativeLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            >
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppinsregular"
                                android:drawableStart="@drawable/password_icon"
                                android:drawablePadding="10dp"
                                android:id="@+id/oldpassedit"
                                android:background="@drawable/custom_input"
                                android:hint="Old-Password"
                                android:textSize="15sp"
                                android:paddingLeft="20dp"
                                android:ems="10"
                                android:inputType="textPassword"
                                android:layout_alignParentEnd="true"/>

                        </RelativeLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            >
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppinsregular"
                                android:drawableStart="@drawable/password_icon"
                                android:drawablePadding="10dp"
                                android:id="@+id/newpass"
                                android:background="@drawable/custom_input"
                                android:hint="New-Password"
                                android:textSize="15sp"
                                android:paddingLeft="20dp"
                                android:ems="10"
                                android:inputType="textPassword"
                                android:layout_alignParentEnd="true"/>

                        </RelativeLayout>

                    </LinearLayout>



                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="20dp"
                app:cardElevation="9dp"

                >


                <Button
                    android:id="@+id/updatebtnn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_bluesh"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
