<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentMain.ScanFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ricebg1"
            android:scaleType="centerCrop"
            />
        <androidx.cardview.widget.CardView

            android:layout_width="350dp"
            android:layout_height="600dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="100dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imagedis"
                android:layout_marginTop="20dp"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:scaleType="fitCenter"
                android:src="@drawable/riceimagescan" />
            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginTop="10dp"
                android:text="Scan your Rice Plant now and find out its condition"
                android:textSize="15sp" />

            <Button
                android:id="@+id/identifydis"
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/scan_nowbtn"
                android:fontFamily="@font/poppinsregular"
                android:text="Use Camera"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp" />
            <Button
                android:id="@+id/identifygallery"
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/scan_nowbtn"
                android:fontFamily="@font/poppinsregular"
                android:text="Select Local"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</LinearLayout>