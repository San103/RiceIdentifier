<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="290dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp"
    android:id="@+id/main_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/diagnose_image"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/cheng"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/diagnose_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FILove with your smile"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/robotonedium"
            />
        <TextView
            android:id="@+id/diagnose_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem baw unsa ni pasabot"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>